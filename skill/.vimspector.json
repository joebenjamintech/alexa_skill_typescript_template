{
  "configurations": {
    "run": {
      "adapter": "vscode-node",
      "variables": {
        "ACCESS_TOKEN": {
          "shell": "$HOME/.local/bin/ask_access_token_get"
        },
        "SKILL_ID": {
          "shell": "$HOME/.local/bin/ask_skill_id_get typescript_node_boilerplate"
        }
      },
      "configuration": {
        "type": "pwa-node",
        "request": "launch",
        "program": "${workspaceFolder}/skill/lambda/node_modules/ask-sdk-local-debug/dist/LocalDebuggerInvoker.js",
        "args": [
          "--accessToken",
          "${ACCESS_TOKEN}",
          "--skillId",
          "${SKILL_ID}",
          "--handlerName",
          "handler",
          "--skillEntryFile",
          "${workspaceFolder}/skill/lambda/dist/index.js",
          "--region",
          "NA"
        ],
        "cwd": "${workspaceFolder}/skill/lambda",
        "outFiles": ["${workspaceRoot}/skill/lambda/dist/**/*.js"]
      }
    }
  }
}

